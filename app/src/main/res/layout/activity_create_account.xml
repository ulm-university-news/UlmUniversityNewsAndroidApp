<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ulm.university.news.app.activities.CreateAccountActivity">

    <TextView
        android:id="@+id/activity_create_account_tv_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_create_account_s_information"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_create_account_s_checkbox"
        android:id="@+id/activity_create_account_chk_terms_of_use"
        android:layout_below="@+id/activity_create_account_tv_information"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="@string/activity_create_account_s_name_hint"
        android:id="@+id/activity_create_account_et_user_name"
        android:layout_below="@+id/activity_create_account_chk_terms_of_use"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_create_account_s_button"
        android:id="@+id/activity_create_account_btn_create_account"
        android:layout_below="@+id/activity_create_account_et_user_name"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/activity_create_account_pgr_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_create_account_et_user_name"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>
