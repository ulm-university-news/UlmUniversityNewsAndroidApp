<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

    <ImageView
        android:id="@+id/channel_detail_list_item_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="channel_icon"
        android:paddingLeft="4dp"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:src="@android:drawable/ic_menu_info_details"/>

    <TextView
        android:id="@+id/channel_detail_list_item_tv_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/channel_detail_list_item_iv_icon"
        android:autoLink="web|email"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/channel_detail_list_item_tv_first_title"
        android:layout_width="fill_parent"
        android:layout_height="26dp"
        android:layout_above="@id/channel_detail_list_item_tv_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/channel_detail_list_item_iv_icon"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="16sp"
        android:textStyle="bold"/>
</RelativeLayout>