<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="Theme.UlmUniversityMain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/uni_main_primary</item>
        <item name="colorAccent">@color/uni_main_accent</item>
        <item name="colorPrimaryDark">@color/uni_main_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="alertDialogTheme">@style/UlmUniversityAlertDialogMain</item>
        <item name="android:textColorLink">@color/hyperlink</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>

    <style name="Theme.UlmUniversityMedicines" parent="Theme.UlmUniversityMain">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/uni_medicines_primary</item>
        <item name="colorAccent">@color/uni_medicines_accent</item>
        <item name="colorPrimaryDark">@color/uni_medicines_dark</item>
    </style>

    <style name="Theme.UlmUniversityScience" parent="Theme.UlmUniversityMain">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/uni_sciences_primary</item>
        <item name="colorAccent">@color/uni_sciences_accent</item>
        <item name="colorPrimaryDark">@color/uni_sciences_dark</item>
    </style>

    <style name="Theme.UlmUniversityInformatics" parent="Theme.UlmUniversityMain">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/uni_informatics_primary</item>
        <item name="colorAccent">@color/uni_informatics_accent</item>
        <item name="colorPrimaryDark">@color/uni_informatics_dark</item>
    </style>

    <style name="Theme.UlmUniversityMathematics" parent="Theme.UlmUniversityMain">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/uni_mathematics_primary</item>
        <item name="colorAccent">@color/uni_mathematics_accent</item>
        <item name="colorPrimaryDark">@color/uni_mathematics_dark</item>
    </style>

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="UlmUniversityAlertDialogMain" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/grey</item>
    </style>

    <style name="Theme.UlmUniversityMain.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.UlmUniversityMain.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
