<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="Theme.UlmUniversityMain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">#7d9aaa</item>
        <item name="colorAccent">#97aebb</item>
        <item name="colorPrimaryDark">#647b88</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="alertDialogTheme">@style/UlmUniversityAlertDialogMain</item>
        <item name="android:textColorLink">#1919ff</item>
    </style>

    <style name="Theme.UlmUniversityMedicines" parent="Theme.UlmUniversityMain">
        <!-- customize the color palette -->
        <item name="colorPrimary">#26547c</item>
        <item name="colorAccent">#7c98b0</item>
        <item name="colorPrimaryDark">#1e4363</item>
    </style>

    <style name="Theme.UlmUniversityScience" parent="Theme.UlmUniversityMain">
        <!-- customize the color palette -->
        <item name="colorPrimary">#bd6005</item>
        <item name="colorAccent">#d79f69</item>
        <item name="colorPrimaryDark">#974c04</item>
    </style>

    <style name="Theme.UlmUniversityInformatics" parent="Theme.UlmUniversityMain">
        <!-- customize the color palette -->
        <item name="colorPrimary">#a32638</item>
        <item name="colorAccent">#c77c87</item>
        <item name="colorPrimaryDark">#821e2c</item>
    </style>

    <style name="Theme.UlmUniversityMathematics" parent="Theme.UlmUniversityMain">
        <!-- customize the color palette -->
        <item name="colorPrimary">#56aa1c</item>
        <item name="colorAccent">#99cc76</item>
        <item name="colorPrimaryDark">#448816</item>
    </style>

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="UlmUniversityAlertDialogMain" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#888888</item>
    </style>

    <style name="Theme.UlmUniversityMain.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.UlmUniversityMain.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
